<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.MyMiniFactoryAPI" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Theme.MyMiniFactoryAPI" parent="Base.Theme.MyMiniFactoryAPI" />

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:theme">@style/ToolBarTheme</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="toolbarNavigationButtonStyle">@style/ToolBarNavigationStyle</item>
    </style>

    <style name="ToolBarNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>